{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es5", "ES2015", "dom", "dom.iterable"],
    "module": "commonjs",
    "target": "ES2021",
    "rootDir": ".",
    "moduleResolution": "node",
    "allowUnreachableCode": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
